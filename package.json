{
  "name": "golf-buddy-matcher",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit --skipLibCheck",
    "build:production": "NODE_ENV=production next build --no-lint",
    "start:production": "NODE_ENV=production next start",
    "validate:env": "npx tsx -e \"import('./src/lib/envValidation').then(m => m.default.validateEnvironmentOnStartup())\"",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "test:build": "npm run type-check && npm run build",
    "test:production": "npm run validate:env && npm run build:production",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out",
    "db:migrate": "echo 'Database migrations handled by Supabase'",
    "db:seed": "echo 'Database seeding handled by Supabase'",
    "db:backup": "echo 'Database backup handled by Supabase'",
    "postinstall": "npm run type-check"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.12.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.9",
    "lucide-react": "^0.526.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "prisma": "^6.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-swipeable": "^7.0.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
